

<p> <%= message %> , how art thou    </p>

<br><br><br>


<form class = "editUser" >
  <div class="container">
    <input type="submit" value = "View / Edit <%= message %> Details" id = "editUser" class="btn btn-info navigation">
    <input type="submit" value = "Add Asset" id = "addAsset" class="btn btn-success navigation">
    <input type="submit" value = "Wan Buy Somethin?" id = "gotMoney" class="btn btn-warning navigation">
    <input type="submit" value = "Check My Sale" id = "viewSaleAsset" class="btn btn-warning navigation">
  </div>
</form>

<br><br>
<h3> <b> Listing of all your Assets </b> </h3>
<br>

<div class="container">
 <table class="table table-hover">
   <thead>
     <tr>
       <th>Asset Name</th>
       <th>Purchase Price</th>
       <th>Selling Price</th>
       <th>Asset Type</th>
       <th>on Market</th>
     </tr>
   </thead>
   <tbody>
     <% listAssets.forEach(function(assets) { %>

     <tr>
       <td><a href="/assets/<%=assets.id %>"> <%= assets.assetName %> </a><br></td>
       <td><%= assets.purchasePrice %><br></td>
       <td><%= assets.sellingPrice %></td>
       <td><%= assets.assetType %></td>
       <td><%= assets.onMarket %></td>
     </tr>

     <% }) %>
   </tbody>
 </table>
